    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myproject1.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
            android:text="秒表"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="30dp"
            tools:layout_editor_absoluteX="192dp" android:id="@+id/textView1"/>
    <TextView
            android:text="0s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="160dp"
            tools:layout_editor_absoluteX="162dp" android:id="@+id/textView2"/>

    <Button
            android:text="启动"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button1"/>
    <Button
            android:text="快进"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button2"/>
    <Button
            android:text="停止"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button3"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    </LinearLayout>

</LinearLayout>
